# FieldOps Support AI - Environment Configuration

# Copy this file to .env and configure for your environment

# === Slack Integration ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#fieldops-alerts
SLACK_USERNAME=FieldOps-Alertmanager

# === Grafana Configuration ===
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
GF_INSTALL_PLUGINS=grafana-piechart-panel,grafana-worldmap-panel

# === Prometheus Configuration ===
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_STORAGE_PATH=/prometheus

# === Alertmanager Configuration ===
ALERTMANAGER_STORAGE_PATH=/alertmanager

# === FieldOps Sync Exporter Configuration ===
FIELDOPS_API_BASE_URL=http://localhost:8000
FIELDOPS_API_KEY=your-api-key-here
FIELDOPS_SYNC_INTERVAL=30
FIELDOPS_METRICS_PORT=9105

# === External Service Monitoring ===
# Add URLs of services to monitor via blackbox exporter
EXTERNAL_HTTP_TARGETS=http://example.com,https://api.example.com/health
EXTERNAL_TCP_TARGETS=example.com:443,api.example.com:80

# === Development Settings ===
# Set to true for development mode with debug logging
DEBUG_MODE=false
LOG_LEVEL=info

# === Docker Compose Overrides ===
COMPOSE_PROJECT_NAME=fieldops-monitoring
DOCKER_BUILDKIT=1

# === Data Persistence ===
# Set to false to use ephemeral storage (data lost on restart)
ENABLE_DATA_PERSISTENCE=true

# === Performance Tuning ===
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s
GRAFANA_REFRESH_INTERVAL=30s

# === Security Settings ===
# Change default passwords in production!
ALERTMANAGER_WEB_EXTERNAL_URL=http://localhost:9093
GRAFANA_ROOT_URL=http://localhost:3000

# === Backup Settings ===
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# === Cloud Integration (Optional) ===
# AWS CloudWatch
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Azure Monitor
AZURE_SUBSCRIPTION_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# === Notification Settings ===
# Email notifications (requires SMTP configuration)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=fieldops-alerts@yourcompany.com

# === Custom Metrics ===
# Configure custom business metrics
ENABLE_BUSINESS_METRICS=true
BUSINESS_METRICS_ENDPOINT=http://localhost:8080/metrics

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# === Feature Flags ===
ENABLE_ADVANCED_ALERTING=true
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_COST_MONITORING=true
